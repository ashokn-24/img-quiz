<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
			crossorigin="anonymous"
		/>
		<title>Admin Dashboard</title>
	</head>
	<body>
		<main>
			<header class="navbar bg-light p-3">
				<div class="container">
					<h3>Admin Dashboard</h3>
					<a href="/admin/logout" class="btn btn-primary">Logout</a>
				</div>
			</header>
			<section class="mt-5 container">
				<div class="row">
					<div class="col-lg-6 mb-2">
						<div class="card">
							<div class="card-header text-center">
								<strong>Total Certificates Generated</strong>
							</div>
							<div class="card-body text-center">
								<p class="fs-3"><%= certificates.length %></p>
							</div>
						</div>
					</div>
					<div class="col-lg-6 mb-2">
						<div class="card">
							<div class="card-header text-center">
								<strong>Certificates Generated Today</strong>
							</div>
							<div class="card-body text-center">
								<p class="fs-3"><%= certGeneratedToday.length %></p>
							</div>
						</div>
					</div>
				</div>

				<table class="mt-5 table table-striped">
					<thead>
						<tr>
							<th scope="col">No.</th>
							<th scope="col">Name</th>
							<th scope="col">Email</th>
							<th scope="col">Institution</th>
							<th scope="col">Date & Time</th>
						</tr>
					</thead>
					<tbody>
						<% certificates.forEach((certificate, index) => { %>
						<tr>
							<td><%= index + 1 %></td>
							<td><%= certificate.name %></td>
							<td><%= certificate.email %></td>
							<td><%= certificate.institution %></td>
							<td>
								<%= certificate.createdAt ? new Date(certificate.createdAt).toLocaleString("en-GB",
								{ timeZone: "Asia/Kolkata", hourCycle: "h12"}) : "----" %>
							</td>
						</tr>
						<% }) %>
					</tbody>
				</table>
			</section>
		</main>
	</body>
</html>
